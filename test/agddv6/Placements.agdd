<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE AGDD SYSTEM "AGDD.dtd" [
<!ENTITY Materials SYSTEM "Materials.agdd"> 
]>

<AGDD DTD_version="v6">

  &Materials;


  <section DTD_version = "v6"
    name        = "world"
    version     = "Id: AGDDWriter.cxx 544 2007-05-23 10:39:11Z ivana "
    date        = "2007-07-20"
    author      = "VGM AGGD Writer"
    top_volume  = "world"  >

    <box    name="world"
      material="Vacuum"
      X_Y_Z="12000.000; 2000.000; 12000.000" />

    <box    name="layerA"
      material="Air"
      X_Y_Z="400.000; 1200.000; 1000.000" />

    <box    name="layerB"
      material="Uranium"
      X_Y_Z="400.000; 200.000; 1000.000" />

    <box    name="layerC"
      material="Scintillator"
      X_Y_Z="400.000;  4.000; 1000.000" />
    
    <composition name="world_comp" envelope="world">
      <posXYZ rot="90;0;0">
	<volume name="wheel"/>
      </posXYZ>
    </composition>

    <composition name="wheel">
      <mposPhi  rot="90;0;0" ncopy="24" R_Z="5000;0" impliedRot="true">
	<volume name="layerA"/>
      </mposPhi>
    </composition>

    <composition name="layerA_comp" envelope="layerA">
      <mposY ncopy="   3"  Y0=" 100.000"  dY=" 200.000"> 
	<volume name="layerB"/>
      </mposY>
    </composition>

    <composition name="layerB_comp" envelope="layerB">
      <posXYZ  X_Y_Z="  0.000;   98.000;   0.0000"> 
	<volume name="layerC"/>
      </posXYZ>
      <posXYZ  X_Y_Z="  0.000;  -98.000;   0.0000"> 
	<volume name="layerC"/>
      </posXYZ>
    </composition>


  </section>

</AGDD>
