<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE AGDD SYSTEM "AGDD.dtd" [
<!ENTITY Materials SYSTEM "Materials.agdd"> 
]>

<AGDD DTD_version="v6">

  &Materials;


  <section DTD_version = "v6"
    name        = "world"
    version     = "Id: AGDDWriter.cxx 544 2007-05-23 10:39:11Z ivana "
    date        = "2007-07-20"
    author      = "VGM AGGD Writer"
    top_volume  = "world"  >

    <box    name="world"
      material="Vacuum_mat"
      X_Y_Z="1200.0000; 200.0000; 1200.0000" />

    <box    name="volA"
      material="Air_mat"
      X_Y_Z="40.0000; 120.0000; 100.0000" />

    <box    name="volB"
      material="Uranium_mat"
      X_Y_Z="40.0000; 20.0000; 100.0000" />

    <box    name="volC"
      material="Scintillator_mat"
      X_Y_Z="40.0000;  0.4000; 100.0000" />
    
    <composition name="world_comp" envelope="world">
      <posXYZ rot="90;0;0">
	<volume name="wheel"/>
      </posXYZ>
    </composition>

    <composition name="wheel">
      <mposPhi  rot="90;0;0" ncopy="24" R_Z="500;0" impliedRot="true">
	<volume name="volA"/>
      </mposPhi>
    </composition>

    <composition name="volA_comp" envelope="volA">
      <mposY ncopy="   3"  Y0=" 40.0000"  dY=" 20.0000"> 
	<volume name="volB"/>
      </mposY>
    </composition>

    <composition name="volB_comp" envelope="volB">
      <posXYZ  X_Y_Z="  0.0000;   9.8000;   0.0000"> 
	<volume name="volC"/>
      </posXYZ>
      <posXYZ  X_Y_Z="  0.0000;  -9.8000;   0.0000"> 
	<volume name="volC"/>
      </posXYZ>
    </composition>


  </section>

</AGDD>
